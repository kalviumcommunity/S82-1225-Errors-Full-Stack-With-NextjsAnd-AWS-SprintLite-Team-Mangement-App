# SSL/TLS Configuration Environment Variables
# Copy to .env.production or use in deployment

# === DOMAIN CONFIGURATION ===
NEXT_PUBLIC_DOMAIN=sprintlite-app.com
NEXT_PUBLIC_DOMAIN_WWW=www.sprintlite-app.com

# === AWS ROUTE53 CONFIGURATION ===
# Route53 Hosted Zone ID (required for DNS operations)
AWS_ROUTE53_ZONE_ID=Z1234567890ABC

# === AWS CERTIFICATE MANAGER (ACM) ===
# ACM Certificate ARN for HTTPS listener
AWS_ACM_CERTIFICATE_ARN=arn:aws:acm:us-east-1:123456789012:certificate/12345678-1234-1234-1234-123456789012

# Certificate status monitoring
AWS_ACM_CERTIFICATE_NAME=sprintlite-app-certificate
AWS_ACM_REGION=us-east-1

# === LOAD BALANCER CONFIGURATION ===
# Application Load Balancer endpoint
AWS_ALB_DNS_NAME=sprintlite-alb-123456.us-east-1.elb.amazonaws.com
AWS_ALB_ARN=arn:aws:elasticloadbalancing:us-east-1:123456789012:loadbalancer/app/sprintlite-alb/1234567890123456

# ALB Listener configuration
AWS_ALB_HTTPS_LISTENER_ARN=arn:aws:elasticloadbalancing:us-east-1:123456789012:listener/app/sprintlite-alb/1234567890123456/a1234567890123456

# === SSL/HTTPS ENFORCEMENT ===
# Force HTTPS on all routes
NEXT_PUBLIC_FORCE_HTTPS=true

# HSTS (HTTP Strict Transport Security) configuration
# max-age in seconds: 63072000 = 2 years
NEXT_PUBLIC_HSTS_MAX_AGE=63072000
NEXT_PUBLIC_HSTS_INCLUDE_SUBDOMAINS=true
NEXT_PUBLIC_HSTS_PRELOAD=true

# === MULTI-ENVIRONMENT DOMAINS ===
# For staging and development environments
STAGING_DOMAIN=staging.sprintlite-app.com
DEV_DOMAIN=dev.sprintlite-app.com
API_DOMAIN=api.sprintlite-app.com

# === SSL CERTIFICATE RENEWAL ===
# Days before expiry to alert (for monitoring)
SSL_EXPIRY_WARNING_DAYS=30

# Certificate renewal mode (auto/manual)
# AWS ACM handles auto-renewal for DNS-validated certificates
SSL_RENEWAL_MODE=auto

# === DNS VALIDATION ===
# For manual certificate validation (if needed)
DNS_VALIDATION_METHOD=CNAME
DNS_VALIDATION_TTL=300

# === SECURITY HEADERS ===
# Content Security Policy strict mode
CSP_STRICT=true

# Allow mixed content (disable for production)
ALLOW_MIXED_CONTENT=false

# === MONITORING & ALERTING ===
# CloudWatch alarms for certificate expiry
ENABLE_CERTIFICATE_EXPIRY_ALARM=true

# Enable SSL Labs monitoring
ENABLE_SSL_LABS_MONITORING=false

# === DEPLOYMENT ===
# Environment mode
ENVIRONMENT=production

# CloudFront distribution domain (if using CDN)
# CLOUDFRONT_DOMAIN_NAME=d123456.cloudfront.net

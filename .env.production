# API Configuration
NEXT_PUBLIC_API_URL=https://api.sprintlite.example.com/api
NEXT_PUBLIC_APP_URL=https://sprintlite.example.com

# Database Configuration (Production)
# Use GitHub Secrets or AWS Systems Manager Parameter Store: DATABASE_URL
DATABASE_URL=postgresql://prod_user:PLACEHOLDER_LOAD_FROM_SECRETS_MANAGER@prod-db.example.com:5432/sprintlite_prod

# Authentication
NEXTAUTH_URL=https://sprintlite.example.com
# Generate with: openssl rand -base64 32
# Store in GitHub Secrets: NEXTAUTH_SECRET
NEXTAUTH_SECRET=PLACEHOLDER_LOAD_FROM_SECRETS_MANAGER

# Redis Cache (Production)
REDIS_URL=redis://prod-redis.example.com:6379

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_DEBUG=false

# Third-party Services (Production keys)
# All keys must be stored in GitHub Secrets or AWS/Azure Key Vault
NEXT_PUBLIC_SENTRY_DSN=PLACEHOLDER_LOAD_FROM_SECRETS_MANAGER
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=PLACEHOLDER_LOAD_FROM_SECRETS_MANAGER
AWS_SECRET_ACCESS_KEY=PLACEHOLDER_LOAD_FROM_SECRETS_MANAGER

# Email Service (Production)
SMTP_HOST=smtp.production.com
SMTP_PORT=587
SMTP_USER=PLACEHOLDER_LOAD_FROM_SECRETS_MANAGER
SMTP_PASSWORD=PLACEHOLDER_LOAD_FROM_SECRETS_MANAGER

# Performance & Monitoring
NEW_RELIC_LICENSE_KEY=PLACEHOLDER_LOAD_FROM_SECRETS_MANAGER

# Security Headers
NEXT_PUBLIC_CSP_NONCE=PLACEHOLDER_LOAD_FROM_SECRETS_MANAGER

# Production Environment Configuration
# This file is used for production deployment
# CRITICAL: All sensitive values must be loaded from secure secret managers

# Application Environment
NODE_ENV=production
NEXT_PUBLIC_APP_ENV=production

# AWS Secrets Manager Configuration (for secure environment variable management)
AWS_REGION=us-east-1
SECRET_ARN=arn:aws:secretsmanager:us-east-1:ACCOUNT-ID:secret:sprintlite/app-secrets-XXXXX

# ðŸ”‘ Test Login Credentials:
#    Email: mohit@sprintlite.com
#    Email: sam@sprintlite.com
#    Email: vijay@sprintlite.com
#    Password (all): password123

# API Configuration
NEXT_PUBLIC_API_URL=https://api.sprintlite.example.com/api
NEXT_PUBLIC_APP_URL=https://sprintlite.example.com

# === SSL/TLS & Domain Configuration ===
NEXT_PUBLIC_DOMAIN=sprintlite-app.com
NEXT_PUBLIC_FORCE_HTTPS=true
NEXT_PUBLIC_HSTS_MAX_AGE=63072000
NEXT_PUBLIC_HSTS_INCLUDE_SUBDOMAINS=true
NEXT_PUBLIC_HSTS_PRELOAD=true

# AWS Route53 & Certificate Manager
AWS_ROUTE53_ZONE_ID=Z1234567890ABC
AWS_ACM_CERTIFICATE_ARN=arn:aws:acm:us-east-1:ACCOUNT-ID:certificate/12345678-1234-1234-1234-123456789012
AWS_ALB_DNS_NAME=sprintlite-alb-123456.us-east-1.elb.amazonaws.com

# Database Configuration (Production)
# Use GitHub Secrets or AWS Systems Manager Parameter Store: DATABASE_URL
DATABASE_URL=postgresql://prod_user:PLACEHOLDER_LOAD_FROM_SECRETS_MANAGER@prod-db.example.com:5432/sprintlite_prod

# Authentication
NEXTAUTH_URL=https://sprintlite.example.com
# Generate with: openssl rand -base64 32
# Store in GitHub Secrets: NEXTAUTH_SECRET
NEXTAUTH_SECRET=PLACEHOLDER_LOAD_FROM_SECRETS_MANAGER

# Redis Cache (Production)
REDIS_URL=redis://prod-redis.example.com:6379

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_DEBUG=false

# Third-party Services (Production keys)
# All keys must be stored in GitHub Secrets or AWS/Azure Key Vault
NEXT_PUBLIC_SENTRY_DSN=PLACEHOLDER_LOAD_FROM_SECRETS_MANAGER
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=PLACEHOLDER_LOAD_FROM_SECRETS_MANAGER
AWS_SECRET_ACCESS_KEY=PLACEHOLDER_LOAD_FROM_SECRETS_MANAGER

# Email Service (Production)
SMTP_HOST=smtp.production.com
SMTP_PORT=587
SMTP_USER=PLACEHOLDER_LOAD_FROM_SECRETS_MANAGER
SMTP_PASSWORD=PLACEHOLDER_LOAD_FROM_SECRETS_MANAGER

# Performance & Monitoring
NEW_RELIC_LICENSE_KEY=PLACEHOLDER_LOAD_FROM_SECRETS_MANAGER

# Security Headers
NEXT_PUBLIC_CSP_NONCE=PLACEHOLDER_LOAD_FROM_SECRETS_MANAGER

# Application Environment
NODE_ENV=production
NEXT_PUBLIC_APP_ENV=staging

# AWS Secrets Manager Configuration (for secure environment variable management)
AWS_REGION=us-east-1
SECRET_ARN=arn:aws:secretsmanager:us-east-1:ACCOUNT-ID:secret:sprintlite/staging-secrets-XXXXX

# API Configuration
NEXT_PUBLIC_API_URL=https://staging-api.sprintlite.example.com/api
NEXT_PUBLIC_APP_URL=https://staging.sprintlite.example.com

# Database Configuration (Staging)
# Use GitHub Secrets: DATABASE_URL
DATABASE_URL=postgresql://staging_user:PLACEHOLDER_LOAD_FROM_GITHUB_SECRETS@staging-db.example.com:5432/sprintlite_staging

# Authentication
NEXTAUTH_URL=https://staging.sprintlite.example.com
# Use GitHub Secrets: NEXTAUTH_SECRET
NEXTAUTH_SECRET=PLACEHOLDER_LOAD_FROM_GITHUB_SECRETS

# Redis Cache (Staging)
REDIS_URL=redis://staging-redis.example.com:6379

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_DEBUG=true

# Third-party Services (Staging keys)
# Use GitHub Secrets for all sensitive values
NEXT_PUBLIC_SENTRY_DSN=PLACEHOLDER_LOAD_FROM_GITHUB_SECRETS
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=PLACEHOLDER_LOAD_FROM_GITHUB_SECRETS
AWS_SECRET_ACCESS_KEY=PLACEHOLDER_LOAD_FROM_GITHUB_SECRETS

# Email Service (Staging)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=PLACEHOLDER_LOAD_FROM_GITHUB_SECRETS
SMTP_PASSWORD=PLACEHOLDER_LOAD_FROM_GITHUB_SECRETS
